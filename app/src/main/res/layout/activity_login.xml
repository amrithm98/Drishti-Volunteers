<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/rbg1"
    tools:context="com.cse.amrith.drishti17volunteers.Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fb_button_bg"
        android:background="#4867aa"
        android:alpha="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:animateLayoutChanges="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@color/com_facebook_blue"
            android:id="@+id/fb_button"
            android:drawableLeft="@drawable/fb"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:text="Facebook" />
    </RelativeLayout>
    <LinearLayout
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fb_button_bg"
        android:id="@+id/g_button_bg"
        android:orientation="horizontal"
        android:alpha="1"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/g_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:drawableLeft="@drawable/g"
            android:text="Google "
            android:layout_centerVertical="true"
            android:textAlignment="center" />
    </LinearLayout>
</RelativeLayout>
